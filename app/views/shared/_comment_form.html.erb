<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :content, placeholder: "Commentary..." %>
    <%= f.hidden_field :snippet_id, :value => @snippet.id %>
  </div>
  <div class="center"><%= f.submit "Comment", class: "btn btn-small btn-primary" %></div>
<% end %>