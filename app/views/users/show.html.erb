<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.snippets.any? %>
      <h4>Snippets (<%= @user.snippets.count %>)</h4>
      <ol class="snippets">
        <%= render @snippets %>
      </ol>
      <%= will_paginate @snippets %>
    <% end %>
  </div>
</div>