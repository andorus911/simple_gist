<li>
  <span class="title"><b><%= link_to snippet.title, snippet %></b></span><br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(snippet.created_at) %> ago by 
    <% if !current_user?(snippet.user) %>
      <%= link_to snippet.user.name, snippet.user %>
    <% else %>
      <%= link_to 'you', snippet.user %>
    <% end %>
  </span>
  <% if current_user?(snippet.user)  %>
    <%= link_to "delete", snippet, method: :delete, data: { confirm: "You sure?" }, title: snippet.title, id: "delete" %>
  <% end %>
</li>